    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".BlueActivity"
            android:label="@string/title_activity_blue" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       	<activity android:name=".LockPatternActivity"></activity>
        <activity android:name=".ListenerActivity"></activity>
        <activity android:name=".SendRequestActivity"></activity>
    </application>

</manifest>